# YD Shomer Configuration Example
# Copy this file to .env and configure your settings

# Enable/Disable Shomer
SHOMER_ENABLED=true

# Verbose mode (detailed reports)
SHOMER_VERBOSE=true

# Email configuration for alerts
SHOMER_EMAIL_HANDLER=mail
SHOMER_EMAIL_TO=your-email@example.com
SHOMER_EMAIL_FROM=noreply@example.com

# Database configuration (for examples)
DB_HOST=localhost
DB_NAME=your_database
DB_USER=your_username
DB_PASS=your_password
