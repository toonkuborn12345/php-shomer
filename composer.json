{
    "name": "yd-shomer/php-shomer",
    "description": "SQL Query Guardian (שומר) - Runtime validation and security for PHP development",
    "type": "library",
    "keywords": [
        "sql",
        "security",
        "validation",
        "guardian",
        "shomer",
        "prepared-statements",
        "sql-injection",
        "debugging",
        "development",
        "mysql",
        "pdo",
        "mysqli"
    ],
    "homepage": "https://github.com/yd-shomer/php-shomer",
    "license": "MIT",
    "authors": [
        {
            "name": "YD team",
            "email": "votre@email.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Shomer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shomer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
